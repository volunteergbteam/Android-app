<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <TextView
            android:id="@+id/item_events_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            tools:text="Купить хлеба"
            />

        <TextView
            android:id="@+id/item_events_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_events_text_title"
            android:textSize="20sp"
            tools:text="У моей бабушки кончился хлеб, и она отказывается без него есть!"/>

        <ImageView
            android:id="@+id/item_events_addressIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_events_text_description"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/address_icon" />

        <TextView
            android:id="@+id/item_events_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_events_addressIcon"
            app:layout_constraintTop_toTopOf="@id/item_events_addressIcon"
            app:layout_constraintBottom_toBottomOf="@id/item_events_addressIcon"
            android:layout_marginStart="4dp"
            tools:text="Санкт-Петербург, Невский пр. 1, 2"/>

        <Button
            android:id="@+id/item_events_btn_check_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_events_addressIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/check_completed"
            android:drawableStart="@drawable/ic_check_black_24dp"/>

        <Button
            android:id="@+id/item_events_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_events_addressIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_events_btn_check_completed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/cancel"
            android:backgroundTint="@color/colorRed"
            android:drawableStart="@drawable/ic_check_black_24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>